{
  "manifest_version": 3,
  "name": "WpfTaskBar Extension",
  "version": "1.0",
  "description": "FavIconをタスクバーに表示し、固定化されたタブのアイコンを通知領域に表示するための情報を転送します。",
  
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "WpfTaskBar"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"]
    }
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}