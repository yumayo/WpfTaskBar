{
  "manifest_version": 3,
  "name": "WpfTaskBar WebSocket Test Extension",
  "version": "1.0",
  "description": "Chrome extension for testing WebSocket communication with WpfTaskBar",
  
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "WpfTaskBar Test"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["src/utils/websocket-client.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}